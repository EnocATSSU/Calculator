<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="300.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <Button layoutX="151.0" layoutY="198.0" mnemonicParsing="false" onAction="#Login" text="Submit" textFill="#d8941f">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <DropShadow>
               <color>
                  <Color red="0.545098066329956" green="0.1882352977991104" blue="0.08235294371843338" />
               </color>
            </DropShadow>
         </effect>
</Button>
      <TextField fx:id="txtUserName" layoutX="33.0" layoutY="70.0" promptText="UserName">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <InnerShadow>
               <color>
                  <Color red="0.545098066329956" green="0.1882352977991104" blue="0.08235294371843338" />
               </color>
            </InnerShadow>
         </effect>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="33.0" layoutY="124.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="H_RESIZE" />
         </cursor>
         <effect>
            <DropShadow>
               <color>
                  <Color red="0.545098066329956" green="0.1882352977991104" blue="0.08235294371843338" />
               </color>
</DropShadow>
         </effect>
      </PasswordField>
      <Label fx:id="lblLogin" layoutX="44.0" layoutY="14.0" prefHeight="35.0" prefWidth="179.0" text="Login" textFill="#560f0f">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Label>
      <ImageView fitHeight="87.0" fitWidth="121.0" layoutX="268.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../Desktop/calc.jpeg" />
         </image>
         <cursor>
            <Cursor fx:constant="H_RESIZE" />
         </cursor>
         <effect>
            <Glow>
               <input>
                  <InnerShadow>
                     <input>
                        <DropShadow />
                     </input>
                  </InnerShadow>
               </input>
            </Glow>
         </effect>
      </ImageView>
   </children>
</AnchorPane>


